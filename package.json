{
  "type": "module",
  "scripts": {
    "build": "go build -cover",
    "prestart": "rm -rf coverage && mkdir coverage",
    "start": "GOCOVERDIR=coverage ./realworld-go",
    "stop": "kill-port 3000 --graceful > /dev/null 2>&1 || true",
    "test:only": "curl -sfv http://localhost:3000/api",
    "test": "./start-and-test.sh",
    "coverage": "go tool covdata percent -i coverage/"
  },
  "devDependencies": {
    "kill-port-process": "^3.2.1",
    "wait-port": "^1.1.0"
  }
}
